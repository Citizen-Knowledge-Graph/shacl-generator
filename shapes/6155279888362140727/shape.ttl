@prefix ff: <https://foerderfunke.org/default#> .
@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix sh: <http://www.w3.org/ns/shacl#> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .

ff:kinderzuschlag a ff:RequirementProfile ;
    ff:hasMainPersonShape ff:kinderzuschlagMainPersonShape .

ff:kinderzuschlagMainPersonShape a sh:NodeShape,
        ff:EligibilityConstraint ;
    sh:property ff:prop_familien_einkommen,
        ff:prop_kinder_unter_25,
        ff:prop_kindergeld,
        ff:prop_kinderzuschlag_beantragt,
        ff:prop_vermoegen ;
    sh:targetClass ff:Citizen .

ff:prop_familien_einkommen sh:description "The family's gross income must be at least 900 euros (couples) or 600 euros (single parents) to receive child supplement." ;
    sh:in ( ff:einkommen_familie-ao-monatsbrutto-ueber-900-600 ff:einkommen_familie-ao-monatsbrutto-unter-900-600 ) ;
    sh:path ff:einkommen_familie .

ff:prop_kinder_unter_25 sh:description "The child must live in the household, be under 25 years old, and unmarried to be eligible for child supplement." ;
    sh:in ( true ) ;
    sh:path ff:kinder_18_25 .

ff:prop_kindergeld sh:description "Parents must receive child benefit or a comparable benefit for the child to apply for child supplement." ;
    sh:in ( true ) ;
    sh:path ff:kindergeld .

ff:prop_kinderzuschlag_beantragt sh:datatype xsd:boolean ;
    sh:description "The application for child supplement must be submitted separately to the family benefits office." ;
    sh:in ( true ) ;
    sh:path ff:kinderzuschlag_beantragt .

ff:prop_vermoegen sh:datatype xsd:decimal ;
    sh:description "Significant assets are counted from 55,000 euros for 2 persons and 70,000 euros for 3 persons, with an increase of 15,000 euros per additional child." ;
    sh:maxInclusive 55000 ;
    sh:path ff:vermoegen .

